{
  "name": "backend",
  "version": "1.0.0",
  "description": "Aprende a crear una API con GraphQL, Node y TypeScript. Almacena tus datos en una base de datos de MongoDB y despliégala en Vercel hacia producción. Crea un frontend con React y Apollo Client para consumirla.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts --exec ts-node src/index.ts -e ts,graphql",
    "build": "tsc -p . && ncp src/graphql/schemas public/graphql/schemas",
    "start": "node public/index.js"
  },
  "keywords": [],
  "author": "Gerardo Tordoya <zherar7ordoya@outlook.com>",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.12.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import-node": "0.0.4",
    "graphql-tools": "^5.0.0",
    "mongodb": "^3.6.3",
    "ncp": "^2.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/express-graphql": "^0.9.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/mongodb": "^3.6.7",
    "@types/node": "^13.13.4",
    "nodemon": "^2.0.3",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
